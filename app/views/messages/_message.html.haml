.main__body__messages{ message_id: message.id }
  .main__message
    .main__message__name
      = message.user.name
    .main__message__date
      = message.created_at
  .main__message
    - if message.content.present?
      .main__message__body
        = message.content
    = image_tag message.image.url, class: 'main2__image' if message.image.present?
